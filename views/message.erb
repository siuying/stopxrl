<div class="message" id="m_<%= message.id %>">
	<div class="imagebox">
		<img src="<%= message.profile_image_url %>"/>
	</div>
	<div class="textbox">
		<span class="name"><a href="http://twitter.com/<%= message.from_user %>">@<%= message.from_user %></a></span>
		<span class="text"><%= prep message.text %></span>
	</div>
	<div class="subbox">
		<span class="time"><a href="http://twitter.com/<%= message.from_user %>/status/<%= message.twitter_id.to_i %>">
		<%= h message.created_at.strftime("%Y/%M/%d %H:%m:%S") %></a>
		</span>
	</div>
</div>